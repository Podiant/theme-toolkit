{
  "name": "Naked",
  "version": "2.1",
  "description": "A barebones, virtually unstyled base theme",
  "options": [
    [
      "Typography",
      {
        "fields": [
          {
            "name": "font_family",
            "default": "Open Sans",
            "type": "typeface"
          }
        ]
      }
    ],
    [
      "Static text",
      {
        "fields": [
          {
            "name": "string_blogpost_list_next",
            "default": "Older posts",
            "label": "Next blog posts link"
          },
          {
            "name": "string_episode_list_next",
            "default": "Older episodes",
            "label": "Next episodes link"
          },
          {
            "name": "string_guest_list_next",
            "default": "More guests",
            "label": "Next guests link"
          },
          {
            "name": "string_search_list_next",
            "default": "Next page",
            "label": "Next search results page"
          },
          {
            "name": "string_search_list_prev",
            "default": "Previous page",
            "label": "Previous search results page"
          },
          {
            "name": "string_related_episodes",
            "default": "You might also like",
            "label": "Related episodes heading"
          },
          {
            "name": "string_guest_episodes",
            "default": "Episodes @name appears in",
            "label": "Guest episodes text",
            "help": "Text for the \"Episodes [guest name] appears in\" heading. Place the text \"@name\" where the guest name should be inserted. For example, to make the phrase \"Episodes Jane Doe appears in\" translatable, use the text \"Episodes @name appears in\""
          },
          {
            "name": "string_no_resuots",
            "default": "Sorry, there arenâ€™t any items matching your search.",
            "label": "No search results found"
          },
          {
            "name": "string_search_again",
            "default": "Search again",
            "label": "Search again"
          }
        ]
      }
    ],
    [
      "Miscellaneous",
      {
        "fields": [
          {
            "name": "date_format",
            "default": "MMMM Do, YYYY",
            "choices": [
              ["YYYY-MM-DD", "1991-08-16"],
              ["d MMMM YYYY", "16 August 1991"],
              ["Do MMMM, YYYY", "16th August, 1991"],
              ["MMMM Do, YYYY", "August 16th, 1991"],
              ["dddd, MMMM Do, YYYY", "Friday, August 16th, 1991"]
            ]
          }
        ]
      }
    ]
  ],
  "regions": [
    {
      "id": "a",
      "label": "Left-hand footer section",
      "default": [
        "theme.about"
      ]
    },
    {
      "id": "b",
      "label": "Middle footer section",
      "default": [
        "theme.subscribe",
        "theme.follow"
      ]
    },
    {
      "id": "c",
      "label": "Right-hand footer section",
      "default": [
        "3p.widget"
      ]
    }
  ],
  "widgets": {
    "about": {
      "label": "About the podcast",
      "partial": "about"
    },
    "subscribe": {
      "label": "Subscription links",
      "partial": "subscribe"
    },
    "follow": {
      "label": "Social media links",
      "partial": "follow"
    }
  }
}
